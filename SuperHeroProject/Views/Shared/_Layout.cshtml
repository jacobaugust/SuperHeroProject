<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Superhero App Project</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-fixed-top navbar-light" style="background-color: #e3f2fd;">
        <div class="container-fluid">
            <div class="navbar-brand">
                <button type="button" class="float-xl-none navbar-toggler" data-toggle="collapse" data-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                   
                </button>
                @Html.ActionLink("SuperHeroProject", "Index", "Superheroes", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto m-lg-2 mt-lg-0">
                    <li class="nav-item active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="nav-item active">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="nav-item active">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
